@model PortalConhecimento.UI.Web.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Esqueci Minha Senha";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
<div>
   
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <p>
            Preencha os dados abaixo:
        </p>
        <hr />
        
        @Html.ValidationSummary(false, Resources.DefaultResource.ErrorSummary)

        <div class="form-group">
            <div class="row">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
        </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Recuperar" />
            </div>
        </div>
    </div>
    }

</div>
