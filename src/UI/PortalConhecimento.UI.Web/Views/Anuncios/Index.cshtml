@model IEnumerable<PortalConhecimento.Domain.Entities.Anuncio>
@{
    ViewBag.Title = "Index";
}

<h2>Meus Anúncios</h2>

<div class="form-group text-right">
    <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
        <i class="glyphicon glyphicon-plus"></i>
        Novo Anúncio
    </a>
</div>

@if (Model.Count() > 0)
{
    <div class="list-group">
        @foreach (var item in Model)
        {
            <div class="list-group-item">
                <h4 class="list-group-item-heading">@item.Titulo</h4>
                <a href="@Url.Action("Edit", new { Id = item.Id })" class="btn btn-xs btn-default" title="Editar">
                    <i class="glyphicon glyphicon-pencil"></i>
                </a>
                <a href="@Url.Action("Delete", new { Id = item.Id })" class="btn btn-xs btn-default" title="Excluir">
                    <i class="glyphicon glyphicon-trash"></i>
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning">
        <p>Você não possui nenhum anúncio cadastrado.</p>
    </div>
}